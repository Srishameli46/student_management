<?xml version = '1.0' encoding = 'UTF-8'?>  
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 5.3//EN"  
 "http://hibernate.sourceforge.net/hibernate-mapping-5.3.dtd">  
  
<hibernate-mapping>
    <class name = "com.i2i.cms.model.BankAccount" table = "bank_account">
        <id name = "id" column = "id">
            <generator class = "increment"/>
        </id>
        <property name = "bankName" column = "bank_name"/>
        <property name = "accountHolderName" column = "account_holder_name"/>
        <property name = "branch" column = "branch"/>
        <property name = "accountNumber" column = "account_number"/>
    </class>
</hibernate-mapping>